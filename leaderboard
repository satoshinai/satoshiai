    .container { max-width: 600px; margin: 0 auto; }
    #winnerList { margin-top: 20px; text-align: left; }
    .back-link { margin-top: 20px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>Nakamoto Enigma Leaderboard</h1>
    <p>Behold the enlightened who conquered the cipher...</p>
    <div id="winners">
      <h3>Enlightened Souls</h3>
      <p id="winnerList"></p>
    </div>
    <p class="back-link"><a href="index.html">Back to Challenge</a></p>
  </div>

  <script>
    function updateWinners() {
      fetch(`https://script.google.com/macros/s/AKfycby4PDFuQ6iYlJd3CwW9_dgux7EB969fCxnOFaFk2oyva8syXYd4mHqoUlrASySXUYiQ/exec?action=getWinners`)
        .then(response => response.json())
        .then(data => {
          document.getElementById('winnerList').textContent = data.winners.join('\n');
        })
        .catch(error => console.error('Error fetching winners:', error));
    }
    updateWinners();
  </script>
</body>
